- @section = (params[:metro_area_id] ? 'metro_area' : 'users')

.yui-b
  = render :partial => 'users/search_options'

#yui-main
  .yui-b
    .box.user_list
      %h3=:site_members.l :site => configatron.community_name

      = paginate @users
  
      %br.clear

      - @users.each do |u|
        = render :partial => "user_badge", :locals => { :member => u }
      
      %br.clear
      = paginate @users
